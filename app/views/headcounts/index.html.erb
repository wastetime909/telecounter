<div class='container mt-3 mb-4'>
    <% @headcounts.each do |headcount| %>
        <%= link_to headcount_path(headcount) do %>
        <div class='row'>
            <div class='col-md-6'>
                <p class='text-info'><%= headcount.nickname %></p>
            </div>
            <div class='col-md-6'>
                <p class='text-secondary'>Maximum Number Allowed: <%= headcount.max_count %></p>
            </div>
        </div>
        <% end %>
        <hr/>
    <% end %>
</div>